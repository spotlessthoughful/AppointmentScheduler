<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="230.0" prefWidth="150.0"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.WelcomeController">
    <Label fx:id="welcomeLabel" alignment="CENTER" layoutX="10.0" layoutY="10.0" text="Welcome">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>
    <Button fx:id="viewCustomersButton" layoutX="10.0" layoutY="55.0" mnemonicParsing="false"
            onAction="#viewCustomers" text="View Customers">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
    <Button fx:id="viewAppointmentsButton" layoutX="10.0" layoutY="100.0" mnemonicParsing="false"
            onAction="#viewAppointments" text="View Appointments">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
    <Button fx:id="viewReportsButton" layoutX="10.0" layoutY="145.0" mnemonicParsing="false"
            onAction="#viewReports" text="View Reports">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
    <Button fx:id="exitButton" layoutX="10.0" layoutY="190.0" mnemonicParsing="false" onAction="#exitHandler"
            text="Exit">
    </Button>
</AnchorPane>
